<% include partials/mainheader.ejs %>
                <!--== BODY INNER CONTAINER ==-->
                <div class="sb2-2">
                    <!--== breadcrumbs ==-->
                    <div class="sb2-2-2">
                        <ul>
                            <li><a href="index-2.html"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                            </li>
                            <li class="active-bre"><a href="#"> Dashboard</a>
                            </li>
                            <li class="page-back"><a href="index-2.html"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                            </li>
                        </ul>
                    </div>
    
                    <!--== User Details ==-->
                    <div class="sb2-2-3">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="box-inn-sp">
                                    <div class="inn-title">
                                        <h4>Course Details</h4>
                                        <p>All about courses, program structure, fees, best course lists (ranking), syllabus, teaching techniques and other details.</p>
                                    </div>
                                    <div class="tab-inn">
                                        <div class="table-responsive table-desi">
                                                <% if (players.length > 0) {%>
                                            <table class="table table-hover">
                                                <thead>

                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Image</th>
                                                        <th>Company Name</th>
                                                        <th>Last Name</th>
                                                        <th>Total Vacancy</th>
                                                        <th>Date</th>
                                                        
                                                        
                                                        <th>Username</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                        <% players.forEach((player, index) => { %>
                                                            <tr>
                                                                <th><%= player.id %></th>
                                                                <td><span class="list-img"><img src="/assets/img/<%= player.image %>" alt=""></span></td>
                                                                <td><%= player.first_name %></td>
                                                                <td><%= player.last_name %></td>
                                                                <td><%= player.position %></td>
                                                                <td><%= player.number %></td>
                                                                <td>@<%= player.user_name %></td>
                                                                <td>
                                                                        <span class="label label-success"><a href="/edit/<%= player.id %>" target="_blank" rel="noopener" >Edit</a></span>
                                                                    <a href="/delete/<%= player.id %>" class="ad-st-view">Delete</a>
                                                                </td>
                                                            </tr>
                                                        <% }) %>
                                                    
                                                </tbody>
                                            </table>
                                            <% } else { %>
                                                <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    <% include partials/mainfooter.ejs %>